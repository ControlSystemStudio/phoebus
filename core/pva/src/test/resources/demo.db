# softIocPVA -m N='' -d demo.db
# softIocPVA -m N=2 -d demo.db

record(calc, "ramp$(N)")
{
  field(SCAN, "1 second")
  field(INPA, "ramp$(N)")
  field(CALC, "A+1")
  field(LOW,  "1")
  field(HIGH, "100")
  field(LSV,  "MINOR")
  field(HSV,  "MINOR")
  field(FLNK, "waveform$(N)")
}

record(calc, "saw$(N)")
{
  field(SCAN, "1 second")
  field(INPA, "saw$(N)")
  field(CALC, "A<10 ? A+1 : 0")
}

record(calc, "rnd$(N)")
{
  field(SCAN, "1 second")
  field(CALC, "100*RNDM")
}

record(ai, "static$(N)")
{
  field(INP,  "42")
  field(PINI, "YES")
}

record(compress, "waveform$(N)")
{
  field(INP, "ramp$(N)")
  field(NSAM, "100")
  field(ALG, "Circular Buffer")
}

# "Boolean" i.e. binary records use NTEnum,
# i.e. a structure with type name 'enum_t' and int index,
# not a 'boolean' data type
record(bi, "bool$(N)")
{
  field(ZNAM, "false")
  field(ONAM, "true")
  field(PINI, "YES")
}

record(ao, "ao$(N)")
{
  field(PINI, "YES")
}
